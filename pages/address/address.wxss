.container {
  padding: 30rpx;
  padding-top: 45px;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.add-btn {
  background-color: #2867CE;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.address-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.address-item.default {
  border: 2rpx solid #2867CE;
}

.address-info {
  margin-bottom: 20rpx;
}

.top-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.middle-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.dorm-tag {
  background-color: #E6F3FF;
  color: #2867CE;
}

.school-tag {
  background-color: #FFF3E6;
  color: #FF9500;
}

.home-tag {
  background-color: #E6FFE6;
  color: #34C759;
}

.operations {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.edit-btn, .delete-btn, .default-btn {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: none;
  border: none;
}

.edit-btn {
  color: #2867CE;
}

.delete-btn {
  color: #FF3B30;
}

.default-btn {
  color: #2867CE;
  border: 1rpx solid #2867CE;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}