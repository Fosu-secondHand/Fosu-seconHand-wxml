/* pages/login/login.wxss */
/* 全局样式重置 */
page {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  /* 主容器 */
  .container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background: linear-gradient(135deg, #54CC70 0%, #3DAD5B 100%);
    padding: 40rpx;
    position: relative;
  }
  
  /* 背景装饰 */
  .background-decoration {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-repeat: no-repeat;
    background-position: bottom right;
    background-size: contain;
    opacity: 0.1;
    z-index: 0;
  }
  
  /* 顶部logo和标题 */
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 80rpx;
    margin-bottom: 60rpx;
    z-index: 1;
  }
  
  .logo {
    width: 200rpx;
    height: 200rpx;
    border-radius: 40rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 30rpx;
    background-color: white;
    padding: 20rpx;
  }
  
  .title {
    font-size: 44rpx;
    font-weight: bold;
    color: white;
    margin-bottom: 10rpx;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .subtitle {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  /* 表单容器 */
  .form-container {
    background: white;
    border-radius: 30rpx;
    padding: 40rpx;
    box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
    z-index: 1;
    position: relative;
    overflow: hidden;
  }
  
  .form-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 8rpx;
    background: linear-gradient(90deg, #54CC70, #3DAD5B);
  }
  
  /* 输入框组 */
  .input-group {
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #f0f0f0;
    padding: 30rpx 0;
    margin-bottom: 10rpx;
    transition: all 0.3s ease;
  }
  
  .input-group:focus-within {
    border-bottom-color: #54CC70;
  }
  
  .input-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
    opacity: 0.6;
  }
  
  .input {
    flex: 1;
    font-size: 32rpx;
    color: #333;
    padding: 0;
  }
  
  .placeholder {
    color: #999;
  }
  
  /* 协议勾选区域 */
  .agreement-section {
    margin: 20rpx 0;
    padding: 15rpx 0;
    background-color: #f9f9f9;
    border-radius: 10rpx;
  }
  
  .agreement-checkbox {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
    padding: 0 20rpx;
  }
  
     /* 替换原来的勾选框样式为图片样式 */
     .checkbox-image {
       width: 32rpx;
       height: 32rpx;
       margin-right: 15rpx;
     }

  
  .checkbox.checked {
    color: #54CC70;
  }
  
  .checkbox-label {
    font-size: 28rpx;
    color: #666;
  }
  
  .agreement-links {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding-left: 47rpx;
  }
  
  .agreement-links .link {
    color: #54CC70;
    text-decoration: underline;
    margin: 0 5rpx;
    font-size: 26rpx;
  }
  
  .agreement-links text {
    font-size: 26rpx;
    color: #999;
  }
  
  /* 错误提示 */
  .error-msg {
    color: #ff4d4f;
    font-size: 28rpx;
    margin: 10rpx 0 20rpx 0;
    padding-left: 20rpx;
  }
  
  /* 登录按钮 */
  .login-btn {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 34rpx;
    border-radius: 48rpx;
    background: linear-gradient(90deg, #54CC70, #3DAD5B);
    color: white;
    margin: 30rpx 0;
    border: none;
    box-shadow: 0 10rpx 30rpx rgba(84, 204, 112, 0.3);
    transition: all 0.3s ease;
  }
  
  .login-btn:active {
    transform: scale(0.98);
    box-shadow: 0 5rpx 15rpx rgba(84, 204, 112, 0.3);
  }
  
  /* 微信登录按钮 */
  .wx-login-btn {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 34rpx;
    border-radius: 48rpx;
    background: #ffffff;
    color: #3DAD5B;
    border: 2rpx solid #54CC70;
    margin: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .wx-login-btn:active {
    background: #f8f8f8;
    transform: scale(0.98);
  }
  
  .wx-icon {
    width: 44rpx;
    height: 44rpx;
    margin-right: 16rpx;
  }
  
  /* 其他操作 */
  .other-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
  }
  
  .action-text {
    font-size: 28rpx;
    color: #54CC70;
  }
  
  /* 协议说明 */
  .agreement {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 60rpx;
    margin-bottom: 40rpx;
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.8);
    z-index: 1;
  }
  
  .link {
    color: white;
    text-decoration: underline;
  }
  
  /* 加载状态动画 */
  .login-btn .wx-loading {
    margin-right: 10rpx;
  }
  
  /* 适配小屏幕 */
  @media screen and (max-height: 700px) {
    .header {
      margin-top: 40rpx;
      margin-bottom: 30rpx;
    }
    
    .logo {
      width: 160rpx;
      height: 160rpx;
    }
    
    .form-container {
      padding: 30rpx;
    }
  }