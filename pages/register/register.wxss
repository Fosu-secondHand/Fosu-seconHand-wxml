/* pages/register/register.wxss */

/* 全局样式重置 */
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 主容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #54CC70 0%, #3DAD5B 100%);
  padding: 40rpx;
  position: relative;
}

/* 背景装饰 */
.background-decoration {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-image: url('/static/assets/images/bg-pattern.png');
  background-repeat: no-repeat;
  background-position: bottom right;
  background-size: contain;
  opacity: 0.1;
  z-index: 0;
}

/* 顶部标题 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  z-index: 1;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单容器 */
.form-container {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
  position: relative;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.form-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #54CC70, #3DAD5B);
}

/* 输入框组 */
.input-group {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
  padding: 25rpx 0;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.input-group:focus-within {
  border-bottom-color: #54CC70;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding: 0;
}

.phone-input {
  flex: 1;
}

.placeholder {
  color: #999;
}

/* 验证码按钮 */
.code-btn {
  font-size: 28rpx;
  color: #54CC70;
  background: transparent;
  border: none;
  padding: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.code-btn.disabled {
  color: #999;
}

/* 错误提示 */
.error-msg {
  color: #ff4d4f;
  font-size: 28rpx;
  margin: 10rpx 0 20rpx 0;
  padding-left: 20rpx;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  border-radius: 48rpx;
  background: linear-gradient(90deg, #54CC70, #3DAD5B);
  color: white;
  margin: 30rpx 0;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(84, 204, 112, 0.3);
  transition: all 0.3s ease;
}

.register-btn:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 15rpx rgba(84, 204, 112, 0.3);
}

/* 登录操作 */
.login-action {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #54CC70;
  margin-left: 10rpx;
}

/* 协议说明 */
.agreement {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  z-index: 1;
}

.agreement .link {
  color: white;
  text-decoration: underline;
  margin: 0 5rpx;
}

/* 加载状态动画 */
.register-btn .wx-loading {
  margin-right: 10rpx;
}

/* 适配小屏幕 */
@media screen and (max-height: 700px) {
  .header {
    margin-top: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .form-container {
    padding: 30rpx;
  }
  
  .input-group {
    padding: 20rpx 0;
  }
}