.container {
  padding: 30rpx;
  padding-top: 105rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item label {
  display: block;
  margin-bottom: 15rpx;
  color: #333;
  font-size: 28rpx;
}

.form-item input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.gender-buttons,
.tag-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.gender-btn,
.tag-btn {
  padding: 15rpx 30rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 40rpx;
  font-size: 28rpx;
  background-color: #fff;
  color: #333;
}

.gender-btn.active,
.tag-btn.active {
  background-color: #ffd700;
  border-color: #ffd700;
  color: #000;
}

.image-upload {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #e5e5e5;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
}

.image-upload image {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.6;
}

.image-hint {
  display: block;
  margin-top: 15rpx;
  color: #999;
  font-size: 24rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  margin-top: 40rpx;
  background-color: #ffd700;
  color: #000;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
}