<view class="container">
  <custom-nav-bar title="新增收货地址" showBack="true" />
  
  <view style="padding-top: 88rpx;">
    <!-- 地址（改为直接填写） -->
    <view class="form-item">
      <label>宿舍楼</label>
      <input 
        type="text" 
        placeholder="请填写宿舍楼名称" 
        value="{{dormitory}}" 
        bindinput="handleDormitoryInput" 
      />
    </view>
    
    <!-- 门牌号 -->
    <view class="form-item">
      <label>门牌号</label>
      <input 
        type="text" 
        placeholder="请填写宿舍号 如101室" 
        value="{{roomNumber}}" 
        bindinput="handleRoomNumberInput" 
      />
    </view>
    
    <!-- 其他表单字段保持不变 -->
    <view class="form-item">
      <label>联系人</label>
      <input 
        type="text" 
        placeholder="请输入收货人的姓名" 
        value="{{contactName}}" 
        bindinput="handleContactNameInput" 
      />
    </view>
    
    <view class="form-item">
      <label>手机号码</label>
      <input 
        type="number" 
        placeholder="请输入收货手机号" 
        value="{{phoneNumber}}" 
        bindinput="handlePhoneNumberInput" 
      />
    </view>
    
    <!-- 性别选择 -->
    <view class="form-item">
      <label>性别</label>
      <view class="gender-buttons">
        <button 
          class="gender-btn {{gender === 'male' ? 'active' : ''}}" 
          bindtap="selectGender" 
          data-gender="male"
        >先生</button>
        <button 
          class="gender-btn {{gender === 'female' ? 'active' : ''}}" 
          bindtap="selectGender" 
          data-gender="female"
        >女士</button>
      </view>
    </view>
    
    <!-- 校区选择 -->
    <view class="form-item">
      <label>校区</label>
      <view class="tag-buttons">
        <button 
          class="tag-btn {{campus === '北区' ? 'active' : ''}}" 
          bindtap="selectCampus" 
          data-campus="北区"
        >仙溪北区</button>
        <button 
          class="tag-btn {{campus === '南区' ? 'active' : ''}}" 
          bindtap="selectCampus" 
          data-campus="南区"
        >仙溪南区</button>
      </view>
    </view>
    

    <!-- 提交按钮 -->
    <button class="submit-btn" bindtap="submitAddress">
      {{addressId? '保存修改' : '提交'}}
    </button>
  </view>
</view>