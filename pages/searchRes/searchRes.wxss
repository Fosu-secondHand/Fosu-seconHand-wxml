/* pages/searchRes/searchRes.wxss */
.container {
  min-height: 100vh; /* 初始最小高度（视口高度） */
  background-color: #f5f5f5;
  padding-top: 30rpx;
  padding-bottom: 30rpx; /* 底部留白，避免内容紧贴底部 */
}

.search-header {
  position: fixed;
  top: 180rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background-color: #FBEC9B;
  z-index: 10;
  height: 50px; /* 导航栏高度 */
}

van-search {
  flex: 1; /* 让搜索框占据剩余空间 */
  margin-right: 0rpx; 
}

.search-history {
  padding: 20rpx 30rpx;
  background-color: #fff;
  padding-top: 70px;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  color: #666;
}

.clear-btn {
  font-size: 26rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 0;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  margin: 10rpx 15rpx 10rpx 0;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.delete-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 15rpx;
}

.result-container {
  padding-top: 120px;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 20rpx;
  font-size: 28rpx;
  color: #666;
}

.result-count {
  font-size: 24rpx;
  color: #999;
}

.sort-bar {
  position: fixed;
  display: flex;
  top: 200rpx;
  left: 0;
  right: 0;
  justify-content: space-around;
  padding: 20rpx 30rpx;
  height: 30px;
  padding-top: 60px;
  background: #fff;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.sort-item {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  cursor: pointer;
}

.sort-item.active {
  color: #FF5722;
}

.sort-arrow {
  font-size: 24rpx;
  margin-left: 5rpx;
}

.goods-list {
  padding: 0 20rpx;
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-img {
  width: 200rpx;
  height: 200rpx;
}

.goods-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 30rpx;
  line-height: 40rpx;
  max-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price {
  font-size: 32rpx;
  color: #f60;
  font-weight: bold;
  margin-top: 10rpx;
}

.goods-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-result image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.empty-result text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.search-again {
  padding: 15rpx 60rpx;
  background-color: #FBEC9B;
  color: #333;
  border-radius: 60rpx;
  font-size: 30rpx;
}