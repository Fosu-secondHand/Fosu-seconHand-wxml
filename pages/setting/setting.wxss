.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 20rpx;
  padding-top: 45px;
}

/* 头像部分 */
.avatar-section {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 40rpx auto;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.edit-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.edit-icon image {
  width: 28rpx;
  height: 28rpx;
}

/* 信息列表 */
.info-list {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #333;
}

.info-content {
  display: flex;
  align-items: center;
}

.info-content text {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 标题 */
.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 30rpx;
}

/* 退出登录按钮 */
.logout-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  color: #e64340;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 60rpx auto;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.preview-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  display: block;
}

.upload-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 20rpx;
}

.edit-input {
  width: 100%;
  height: 88rpx;
  background: #f7f7f7;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.edit-textarea {
  width: 100%;
  height: 200rpx;
  background: #f7f7f7;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.random-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #f7f7f7;
  color: #666;
  font-size: 28rpx;
  border-radius: 44rpx;
  margin-top: 20rpx;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 0 10rpx;
}

.cancel-btn {
  background: #f7f7f7;
  color: #666;
}

.confirm-btn {
  background: #07c160;
  color: #fff;
}