.collection-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
}

.goods-item {
  width: 345rpx;
  background: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.goods-image {
  width: 100%;
  height: 345rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.goods-info {
  padding: 20rpx;
}

.goods-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-price {
  display: block;
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.goods-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-condition {
  font-size: 24rpx;
  color: #999;
}

.goods-favorite-count {
  font-size: 24rpx;
  color: #999;
}

/* 商品状态样式 */
.goods-status {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.status-sold {
  color: #07c160;
  font-weight: bold;
}

.status-onsale {
  color: #ff9900;
  font-weight: bold;
}

/* 操作按钮样式 */
.goods-ops {
  display: flex;
  padding: 0 20rpx 20rpx;
  gap: 20rpx;
}

.edit-btn,
.delete-btn {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.edit-btn {
  background-color: #07c160;
  color: #fff;
}

.delete-btn {
  background-color: #ff4d4f;
  color: #fff;
}
