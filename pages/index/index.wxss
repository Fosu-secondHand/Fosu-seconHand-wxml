.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    /* 初始最小高度（视口高度） */
    background-color: #FFFACD;
    padding-bottom: 30rpx;
    /* 底部留白，避免内容紧贴底部 */
    width: 100%;
  }
  
  .header {
    position: fixed;
    top: 85px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    background-color: #FBEC9B;
    z-index: 100;
    height: 50px;
    /* 导航栏高度 */
  }
  
  .title-icon {
    width: 50px;
    height: 50px;
    padding: 5px;
  }
  
  .search-bar {
    flex: 1;
    margin-left: 5px;
    padding: 5px;
    border-radius: 5px;
  }
  
  /* 搜索历史面板 */
  .search-history-panel {
    position: fixed;
    top: 145px;
    left: 20rpx;
    right: 20rpx;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    z-index: 999;
    max-height: 500rpx;
    overflow-y: auto;
  }
  
  /* 历史区域 */
  .history-section {
    padding: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .history-section:last-child {
    border-bottom: none;
  }
  
  /* 历史标题栏 */
  .history-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .history-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
  }
  
  .clear-history {
    font-size: 24rpx;
    color: #999;
  }
  
  /* 历史标签 */
  .history-tags {
    display: flex;
    flex-wrap: wrap;
  }
  
  .history-tag {
    padding: 10rpx 20rpx;
    background-color: #f5f5f5;
    border-radius: 30rpx;
    margin: 10rpx 10rpx 0 0;
    font-size: 24rpx;
    color: #666;
  }
  
  .history-tag:active {
    background-color: #e0e0e0;
  }
  
  .fixed-tabs {
    position: fixed;
    top: 195px;
    left: 0;
    right: 0;
    background-color: white;
    z-index: 98;
    border-bottom: 1px solid #eee;
  }
  
  .scroll-content {
    margin-top: 245px;
    flex: 1;
    height: calc(100vh - 150px);
    overflow-y: auto;
  }
  
  .category-multi-list {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx 20rpx;
    padding: 16rpx 0 8rpx 0;
  }
  
  .category-multi-item {
    padding: 10rpx 28rpx;
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 8rpx;
    font-size: 26rpx;
    color: #666;
    transition: background 0.2s, color 0.2s, border 0.2s;
    cursor: pointer;
  }
  
  .category-multi-item.active {
    background: #ffd500;
    color: #222;
    border: 1px solid #ffd500;
    font-weight: bold;
  }
  
  .filter-bar-wrapper {
    position: fixed;
    top: 150px;
    left: 0;
    right: 0;
    z-index: 99;
    background-color: #fff;
  }
  
  .filter-bar {
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
    padding: 0 20rpx;
    border-bottom: 1px solid #f0f0f0;
    position: static;
  }
  
  .filter-item {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    margin-right: 48rpx;
    padding: 24rpx 0;
    position: relative;
    cursor: pointer;
  }
  
  .filter-arrow {
    width: 24rpx;
    height: 24rpx;
    margin-left: 8rpx;
  }
  
  .dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    width: 100%;
    background: #fff;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
    z-index: 9999;
    padding: 0 40rpx 24rpx 40rpx;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .dropdown-option {
    font-size: 28rpx;
    color: #333;
    border-bottom: 1px solid #f5f5f5;
    cursor: pointer;
    height: 60rpx;
    /* 统一高度 */
    line-height: 60rpx;
    /* 垂直居中 */
    padding: 0;
    /* 去除多余的padding */
    box-sizing: border-box;
    width: 100%;
  }
  
  .dropdown-option:last-child {
    border-bottom: 1px solid transparent;
    /* 保持高度一致但不显示线 */
  }
  
  .dropdown-option.active {
    color: #ffd500;
    font-weight: bold;
  }
  
  .filter-bar-vertical {
    display: flex;
    flex-direction: column;
    background: #fff;
    padding: 16rpx 20rpx 0 20rpx;
    border-bottom: 1px solid #f0f0f0;
    margin-bottom: 0;
    margin-top: 36rpx;
  }
  
  .filter-item-vertical {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 12rpx;
    padding: 16rpx 0 0 0;
    position: relative;
    cursor: pointer;
  }
  
  .filter-arrow-vertical {
    width: 24rpx;
    height: 24rpx;
    margin-left: 8rpx;
  }
  
  .filter-bar-horizontal {
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
    padding: 0 20rpx;
    border-bottom: 1px solid #f0f0f0;
    height: 50px;
  }
  
  .filter-item-horizontal {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    margin-right: 48rpx;
    padding: 24rpx 0;
    position: relative;
    cursor: pointer;
  }
  
  .filter-arrow-horizontal {
    width: 24rpx;
    height: 24rpx;
    margin-left: 8rpx;
  }
  
  .net-error-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60rpx 20rpx;
    margin-top: 150px;
  }
  
  .net-error-img {
    width: 180rpx;
    height: 180rpx;
    margin-bottom: 30rpx;
  }
  
  .net-error-text {
    color: #999;
    font-size: 28rpx;
    margin-bottom: 30rpx;
    text-align: center;
  }
  
  .net-error-btn {
    background: #ffd700;
    color: #222;
    border-radius: 24rpx;
    font-size: 28rpx;
    padding: 12rpx 40rpx;
  }
  
  .idle-entry-btn {
    position: fixed;
    right: 40rpx;
    bottom: 120rpx;
    width: 100rpx;
    height: 100rpx;
    background: #ffd500;
    border-radius: 50%;
    box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.12);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
  }
  
  .idle-entry-icon {
    width: 60rpx;
    height: 60rpx;
    margin-left: 5rpx;
    margin-top: 5rpx;
  }
  