/* 主容器样式 */
.page-header {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #54CC70;
  color: white;
  padding: 0 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;

}

.back-btn {
  font-size: 28rpx;
  padding: 10rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
}

.header-right {
  width: 80rpx;
}

.payment-container {
  padding-top: 180rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 80rpx;
}

/* 卖家信息 */
.seller-info {
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
}

.seller-tag {
  font-size: 24rpx;
  color: #ff6b81;
  padding: 4rpx 20rpx;
  border: 1rpx solid #ff6b81;
  border-radius: 30rpx;
}

/* 商品信息 */
.goods-info {
  margin-top: 16rpx;
  padding: 30rpx; /* 增加内边距 */
  background-color: #fff;
  display: flex;
  align-items: center; /* 垂直居中 */
}

.goods-image {
  width: 180rpx; /* 增加图片宽度 */
  height: 180rpx; /* 增加图片高度 */
  border-radius: 8rpx;
}


.goods-detail {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #ff6b81;
  font-weight: bold;
}

/* 收货地址 */
.address-section {
  margin-top: 16rpx;
  padding: 30rpx; /* 增加内边距 */
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-content {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.contact-name {
  font-size: 34rpx;
  font-weight: 600;
  margin-right: 20rpx;
  color: #333;
}

.phone-number {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.campus-info {
  font-size: 28rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.full-address {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.arrow-icon {
  font-size: 32rpx;
  color: #999;
}

/* 购买数量 */
.quantity-section {
  margin-top: 16rpx;
  padding: 30rpx; /* 增加内边距 */
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.section-title {
  font-size: 28rpx;
  color: #333;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ddd;
  font-size: 36rpx;
}

.quantity-btn.minus.disabled {
  color: #ccc;
  border-color: #eee;
}

.quantity-btn.plus {
  color: #ff6b81;
  border-color: #ff6b81;
}

.quantity-value {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 支付方式 */
.payment-section {
  margin-top: 16rpx;
  background-color: #fff;
}

.payment-item {
  padding: 30rpx; /* 增加内边距 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}


.payment-left {
  display: flex;
  align-items: center;
}

.payment-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.payment-title {
  font-size: 26rpx;
  color: #666;
  padding: 24rpx 24rpx 0;
}

.payment-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}/* 底部结算栏 */
 .bottom-bar {
   position: fixed;
   bottom: 0;
   left: 0;
   right: 0;
   height: auto; /* 让高度自适应内容 */
   background-color: transparent; /* 设置背景透明，去除白边 */
   padding: 20rpx 0; /* 可以调整上下内边距 */
   box-shadow: none; /* 去除阴影 */
   z-index: 100;
    display: flex; 
     justify-content: center;
 }

 .confirm-btn-container {
   display: flex;
   justify-content: center;
   align-items: center;
   height: 100%;
   width: 100%;
   padding: 0 20rpx; /* 在容器上添加水平内边距 */
 }

 .confirm-btn {
   width: 90%; /* 让按钮占满容器宽度 */
   max-width: none; /* 去除最大宽度限制 */
   height: 90rpx; /* 可以进一步增加按钮高度 */
   background-color: #ff6b81;
   color: #fff;
   border-radius: 40rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   font-size: 32rpx;
   padding: 0; /* 去除内边距，让文字居中 */
   white-space: nowrap;
   line-height: 100rpx; /* 与按钮高度一致 */
 }

