/* 主容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: transparent;
  position: relative;
}

/* 原始的垂直布局容器样式 */
.choose-idle-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: transparent;
}
.choose-btn {
  width: 320rpx;
  height: 20rpx;
  margin: 60rpx 0;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  background: #f8f8f8;
}

.choose-idle-container-horizontal {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: transparent;
}

/* 背景图片样式 */
.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}
.choose-btn-horizontal {
  width: 320rpx;
  height: 320rpx;
  margin: 0 40rpx;
  background: transparent;
  box-shadow: none;
  border: none;
}