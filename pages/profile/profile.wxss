/* pages/profile/profile.wxss */
.container {
  padding-top: 45px;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 20px;
  background-color: #fff;
  margin-bottom: 15px;
}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-right: 15px;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5px;
}

.account {
  font-size: 14px;
  color: #999;
}

.setting-btn {
  width: 20px;
  height: 20px;
}

.setting-btn image {
  width: 100%;
  height: 100%;
}

.stats {
  display: flex;
  background-color: #fff;
  margin-bottom: 15px;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 15px 0;
}

.stat-value {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5px;
}

.stat-label {
  font-size: 14px;
  color: #666;
}

.function-list {
  background-color: #fff;
  margin-bottom: 15px;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1px solid #f5f5f5;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item image:first-child {
  width: 22px;
  height: 22px;
  margin-right: 15px;
}

.function-item text {
  flex: 1;
  font-size: 15px;
  color: #333;
}

.function-item image:last-child {
  width: 12px;
  height: 12px;
  color: #999;
}

.logout-btn {
  width: 90%;
  margin: 30px auto;
  height: 40px;
  background-color: #fff;
  border: 1px solid #e64340;
  color: #e64340;
  border-radius: 20px;
  font-size: 15px;
}