/* pages/editIdle/editIdle.wxss */
.container {
  padding: 20rpx;
  padding-top: 95rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.section {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn image {
  width: 24rpx;
  height: 24rpx;
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-image-btn image {
  width: 60rpx;
  height: 60rpx;
}

.price-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-value {
  font-size: 32rpx;
  color: #ff5722;
  font-weight: bold;
}

.shipping-section {
  padding: 20rpx;
}

.radio-item {
  margin-right: 40rpx;
  font-size: 28rpx;
}

.submit-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 40rpx auto;
}

.submit-btn.loading {
  opacity: 0.7;
}

.price-input {
  width: 200rpx;
  height: 48rpx;
  font-size: 32rpx;
  color: #ff5722;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 16rpx;
  margin-left: 10rpx;
}

.category-section,
.condition-section {
  margin-top: 32rpx;
}

.category-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx 24rpx;
}

.category-item {
  padding: 10rpx 28rpx;
  background: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  transition: background 0.2s, color 0.2s, border 0.2s;
  cursor: pointer;
}

.category-item.active {
  background: #ffd500;
  color: #222;
  border: 1px solid #ffd500;
  font-weight: bold;
}