.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 150rpx;
  background: #ffffff;
  border-top: 1px solid #eee;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  z-index: 1000;
}

.tab-item {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #7A7E83;
  font-size: 22rpx;
}

.tab-item.active {
  color: #54CC70;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

