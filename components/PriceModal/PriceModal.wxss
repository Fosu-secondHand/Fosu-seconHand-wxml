.price-detail-modal {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-mask {
    position: absolute;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1001;
}

.modal-content {
    position: relative;
    z-index: 1002;
    background: #fff;
    border-radius: 24rpx;
    padding: 48rpx 36rpx 36rpx 36rpx;
    min-width: 500rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.modal-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 32rpx;
    color: #222;
}

.modal-input-row {
    display: flex;
    align-items: center;
    width: 100%;
    margin-bottom: 16rpx;
}

.modal-input-row text {
    font-size: 32rpx;
    color: #222;
    margin-right: 8rpx;
}

.modal-price-input {
    flex: 1;
    height: 56rpx;
    font-size: 32rpx;
    color: #222;
    border: 1px solid #eee;
    border-radius: 8rpx;
    padding: 0 16rpx;
    background: #f8f8f8;
}

.modal-tip {
    font-size: 24rpx;
    color: #888;
    margin-bottom: 20rpx;
    width: 100%;
    text-align: left;
}

.modal-row {
    font-size: 30rpx;
    color: #444;
    margin-bottom: 24rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.modal-fee {
    color: #ff5722;
    font-weight: bold;
}

.modal-final {
    color: #07c160;
    font-weight: bold;
}

.modal-confirm-btn {
    width: 80%;
    margin-top: 24rpx;
    background: #ffd500;
    color: #222;
    font-size: 32rpx;
    border-radius: 16rpx;
}