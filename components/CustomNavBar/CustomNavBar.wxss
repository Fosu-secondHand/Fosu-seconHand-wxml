.nav-bar {
  position: fixed;
  top: -21px;
  left: 0;
  right: 0;
  color: #000;
  z-index: 1000;
}
.nav-content {
  height: 75px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.left, .right {
  position: absolute;
  top: 0;
  height: 44px;
  display: flex;
  align-items: center;
}
.left { left: 12px; }
.right { right: 12px; }
.back-icon {
  width: 24px;
  height: 24px;
  position: absolute; 
  z-index: 99; 
  top: 70px; 
}
.title {
  font-size: 16px;
  font-weight: 600;
  color: #f3f312;
}

