.custom-keyboard {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  z-index: 2000;
  box-shadow: 0 -2px 16px rgba(0,0,0,0.08);
  padding-bottom: env(safe-area-inset-bottom);
}
.keyboard-row {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 90rpx;
}
.key {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border: 1px solid #f0f0f0;
  background: #fff;
  color: #222;
  height: 90rpx;
  box-sizing: border-box;
}
.icon-key {
  color: #888;
  font-size: 32rpx;
}
.confirm-key {
  background: #ffd500;
  color: #222;
  font-weight: bold;
  border: 1px solid #ffd500;
}
.empty {
  background: transparent;
  border: none;
} 