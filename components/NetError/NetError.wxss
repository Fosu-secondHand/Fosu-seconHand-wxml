.net-error-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
}
.net-error-img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}
.net-error-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  text-align: center;
}
.net-error-btn {
  background: #ffd700;
  color: #222;
  border-radius: 24rpx;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
} 